# {{ ansible_managed }}

{% for server in SPLUNKFORWARDER_SERVERS|selectattr("default", "defined") %}
[tcpout]
defaultGroup = {{ server.target_group }}
{% endfor %}

# forwarder receivers
{% for server in SPLUNKFORWARDER_SERVERS %}
[tcpout:{{ server.target_group }}]
server = {{ server.server }}
compressed = true
{% if server.ssl_cert is defined %}
sslCertPath = $SPLUNK_HOME/{{ splunkfowarder_ssl_cert_path }}/{{ COMMON_DEPLOYMENT }}-{{ item.target_group }}.pem
sslRootCAPath = $SPLUNK_HOME/{{ splunkfowarder_ssl_cert_path }}/cacert.pem
sslPassword = {{ server.ssl_password }}
sslVerifyServerCert = true
sslCommonNameToCheck = {{ server.ssl_common_name }}
{% endif %}

{% endfor %}